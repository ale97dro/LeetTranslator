<Window x:Name="window" x:Class="LeetTranslatorGrafica.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeetTranslatorGrafica"
        mc:Ignorable="d"
        Title="Settings" Height="300" Width="475" Closing="window_Closing">
    <Grid>
        <RadioButton x:Name="lightThemeRadio" Content="Light" HorizontalAlignment="Left" Margin="105,43,0,0" VerticalAlignment="Top" GroupName="ThemeRadio" IsChecked="True"/>
        <RadioButton x:Name="darkThemeRadio" Content="Dark" HorizontalAlignment="Left" Margin="248,43,0,0" VerticalAlignment="Top" GroupName="ThemeRadio"/>
        <Label Content="Tema" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top"/>
        <Label Content="Verifica Aggiornamento" HorizontalAlignment="Left" Margin="10,135,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
